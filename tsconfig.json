{
    "compilerOptions": {
      "target": "es5",
      "lib": ["ESNext"],
      "allowJs": true,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "declaration": true
    },
    "include": ["./src", "./test"]
  }